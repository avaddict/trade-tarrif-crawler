                <Env.TRADETARIFF_CLIENT_PORT>443</Env.TRADETARIFF_CLIENT_PORT>
                <Env.TRADETARIFF_CLIENT_PATH>trade-tariff/sections.json</Env.TRADETARIFF_CLIENT_PATH>
                <Env.tradetariff.sections>1</Env.tradetariff.sections>
                <Env.tradetariff.chapters>01</Env.tradetariff.chapters>
                <Env.DATABASE_DB_CONNECTION_STRING>jdbc:h2:mem:testdb</Env.DATABASE_DB_CONNECTION_STRING>
